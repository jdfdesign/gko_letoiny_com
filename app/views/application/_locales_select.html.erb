<%# cache [I18n.locale, site,'locales_select4'] do %>
   <ul class="nav nav-menu nav-locales"> 
     <li class="dropdown-toggle" data-toggle="dropdown">
       <a href="#" class="dropdown-toggle" data-toggle="dropdown" tabindex="-1">
         English&nbsp;<i class="icon-angle-down"></i> 
       </a> 
       <ul class="dropdown-menu">
         <% site.available_locales.each do |language| %>
           <li><%= link_to(language.presentation, root_url(:locale => language.code), :class => [language.code.to_s, 'navbar-link']) %></li>
         <% end %>
       </ul>
     </li>
   </ul>
<%# end if site.frontend_translated? %>
