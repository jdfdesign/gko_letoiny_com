<% @info_form = InfoForm.new() unless @info_form %>
<%= simple_form_for @info_form, :url => info_forms_path, 
    :html => {:data => { :remote => true, :method => :post }} do |f| %>
  
  <div class="row">	
    <div class="col-xs-12 form-group">
      <%= f.text_field :first_name, :class => "form-control required", 
      :placeholder => "#{t('simple_form.labels.info_form.first_name')} *" %>
    </div>
    <div class="col-xs-12 form-group">
      <%= f.text_field :last_name, :class => "form-control required", 
      :placeholder => "#{t('simple_form.labels.info_form.last_name')} *" %>
    </div>
    <div class="col-xs-12 form-group">
      <%= f.email_field :email, :class => "form-control required", 
      :placeholder => "#{t('simple_form.labels.info_form.email')} *" %>
    </div>
    <div class="col-xs-12 form-group">
      <%= f.text_field :phone, :class => "form-control required", 
      :placeholder => "#{t('simple_form.labels.info_form.phone')} *" %>
    </div>
    <div class="col-xs-12 form-group">
      <select class="select required" id="info_form_subject" name="info_form[subject]">
        <option value=""><%= t("form.services.prompt") %></option>
        <option value="<%= t("form.services.reserve_a_suite") %>"><%= t("form.services.reserve_a_suite") %></option>
        <option value="<%= t("form.services.serenity_spa_cottage") %>"><%= t("form.services.reserve_a_table") %></option>
        <option value="serenity_spa_cottage"><%= t("form.services.serenity_spa_cottage") %></option>
        <option value="<%= t("form.services.weddings_events") %>"><%= t("form.services.weddings_events") %></option>
        <option value="<%= t("form.services.boutique") %>"><%= t("form.services.boutique") %></option>
        <option value="<%= t("form.services.fitness") %>"><%= t("form.services.fitness") %></option>
        <option value="other"><%= t("form.services.other") %></option>
      </select>
    </div>
    <div class="col-xs-12 form-group">
      <%= f.text_area :message, :class => "form-control required", :rows => "20", :cols => "30", 
      :placeholder => t('simple_form.labels.info_form.message') %>
    </div>
    <input type="text" name="info_form[nickname]" id="info_form_nickname" value="" class="form-control nickname hidden">
    <div class="col-xs-12 form-group">
      <%= f.button :submit, :class => "btn-primary btn-block" %>
    </div>
    <div class="col-xs-12 form-group">
      <p id="error" data-alert="" class="alert"><%= t("gko.info_form_error") %></p>
      <p id="thanks" data-alert="" class="alert alert-success"><%= t("info_form_thanks") %></p>
      <p id="timedout" data-alert="" class="alert"><%= t("gko.info_form_connection_time_out") %></p>
      <p id="state" data-alert="" class="alert"><%= @info_form.errors.full_messages.join("<br/>").html_safe %></p>
    </div>
  </div>
  <% end %>