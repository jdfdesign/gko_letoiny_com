<% content_for :before_javascript_libraries do %>
  <% if site.sections.root.images.order(:position).any? && !is_mobile_device? %>
    <script type="text/javascript">
      <% if action_name.to_s != "index" && resource == site.sections.root %>
        var supersized_slides = [<%= raw site.sections.root.images.order(:position).map{|c| "{image: '#{c.url}'}" }.join(",").to_s %>];
      <% else %>
        var supersized_slides = [<%= raw "{image: '#{site.sections.root.images.order(:position).sample.url}'}" %>];
      <% end %> 
    </script>
  <% end %>
<% end %>