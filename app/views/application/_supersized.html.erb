<% content_for :before_javascript_libraries do %>
  <% if site.sections.named("main").images.order(:position).any? && !is_mobile_device? %>
    <script type="text/javascript">
      var supersized_slides = [<%= raw site.sections.named("main").images.order(:position).map{|c| "{image: '#{c.url}'}" }.join(",").to_s %>]
    </script>
  <% end %>
<% end %>