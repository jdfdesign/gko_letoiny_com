<% content_for :before_javascript_libraries do %>
  <%# if site.sections.root.images.order(:position).any? && !is_mobile_device? %>
  <% if site.sections.root.images.order(:position).any? %>
    <script type="text/javascript">
      <% if @supersized_images && !is_mobile_device? %>
        var supersized_slides = [<%= raw @supersized_images.map{|c| "{image: '#{c.url}'}" }.join(",").to_s %>];
      <% else %>
        var supersized_slides = [<%= raw "{image: '#{site.sections.root.images.order(:position).sample.url}'}" %>];
      <% end %> 
    </script>
  <% end %>
<% end %>