<% @features ||= site.features.live -%>
<%= render_slideshow_for(resource) %>
<% if resource.body.present? %>
<div class="container">
  <div class="row">
    <div id="scroll-page" class="col-xs-12">
      <%= render_page_title(resource.title) if resource.show_title_in_page %>
      <%= render_copy_text(resource.body) %>
    </div>
  </div>
</div>
<% end %>
<%= render 'feature_modal' if @features.any? -%>
