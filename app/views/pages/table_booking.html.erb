<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= render_page_title(resource.title) %>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-12 col-sm-4'>
      <%= render_copy_text(resource.body) %>
      <p><b><%= t("tollfree_address").html_safe %></b></p>
      <p><%= t("full_hotel_address").html_safe %></p>
    </div>
    <div class='col-xs-12 col-sm-8'>
      
      <form id="contact-form" action="/inquiries" method="post" data-remote="true">
        <input type="text" name="inquiry[ghost]" id="inquiry_ghost" value="" class="form-control hide"> 
        <div class="row">	
          <div class="col-xs-12 form-group">
            <input type="text" name="inquiry[first_name]" id="inquiry_first_name" value="" class="form-control required" placeholder="<%= t('simple_form.labels.inquiry.first_name') %> *">
          </div>
          <div class="col-xs-12 form-group">
            <input type="text" name="inquiry[last_name]" id="inquiry_last_name" value="" class="form-control required" placeholder="<%= t('simple_form.labels.inquiry.last_name') %> *">
          </div>
          <div class="col-xs-12 form-group">
            <input type="text" name="inquiry[email]" id="inquiry_email" value="" class="form-control required email" placeholder="<%= t('simple_form.labels.inquiry.email') %> *">
          </div>
          <div class="col-xs-12 form-group">
            <input type="text" name="inquiry[phone]" id="inquiry_phone" value="" class="form-control required" placeholder="<%= t('simple_form.labels.inquiry.phone') %> *">
          </div>
          <div class="col-xs-12 form-group">
            <input type="text" name="inquiry[staying_place]" id="inquiry_staying_place" value="" class="form-control required" placeholder="<%= t('simple_form.labels.inquiry.staying_place') %> *">
          </div>
          <div class="col-xs-12 form-group">
            <div class="input-group">
              <input type="text" class="form-control date" placeholder="<%= t('simple_form.labels.table_inquiry.date') %> *">
              <span class="input-group-addon"><i class="icon-th"></i></span>
            </div>
          </div>
          <div class="col-xs-12 form-group">
            <% table_inquiry_format = I18n.locale == :en ? "%I.%M %p" : "%H.%M" %>
            <select class="select required" id="table_inquiry_service" name="table_inquiry[service]">
              <optgroup label="<%= t(:"simple_form.labels.table_inquiry.lunch")  %>">
                <option value="12"><%= l(Time.zone.local(2011,4,12,12,0), :format => table_inquiry_format) %></option>
                <option value="12"><%= l(Time.zone.local(2011,4,12,12,30), :format => table_inquiry_format) %></option>
                <option value="13"><%= l(Time.zone.local(2011,4,12,13,0), :format => table_inquiry_format) %></option>
                <option value="13.30"><%= l(Time.zone.local(2011,4,12,13,30), :format => table_inquiry_format) %></option>
                <option value="14"><%= l(Time.zone.local(2011,4,12,14,0), :format => table_inquiry_format) %></option>
                <option value="14.30"><%= l(Time.zone.local(2011,4,12,14,30), :format => table_inquiry_format) %></option>
              </optgroup>
              <optgroup label="<%= t(:"simple_form.labels.table_inquiry.dinner")  %>">
                <option value="19"><%= l(Time.zone.local(2011,4,12,19,0), :format => table_inquiry_format) %></option>
                <option value="19.30"><%= l(Time.zone.local(2011,4,12,19,30), :format => table_inquiry_format) %></option>
                <option value="20"><%= l(Time.zone.local(2011,4,12,20,0), :format => table_inquiry_format) %></option>
                <option value="20.30"><%= l(Time.zone.local(2011,4,12,20,30), :format => table_inquiry_format) %></option>
                <option value="21"><%= l(Time.zone.local(2011,4,12,21,0), :format => table_inquiry_format) %></option>
                <option value="21.30"><%= l(Time.zone.local(2011,4,12,21,30), :format => table_inquiry_format) %></option>
              </optgroup> 
            </select>
          </div>
          <div class="col-xs-12 form-group">
            <input type="number" max="20" maxlength="2" min="1" step="1" name="inquiry[guest_count]" id="inquiry_guest_count" value="" class="form-control required" placeholder="<%= t('simple_form.labels.table_inquiry.guest_count') %> *">
          </div>
          <div class="col-xs-12 form-group hidden">
            <input type="text" name="inquiry[other_value]" id="inquiry_other_value" value="" class="form-control required other_value" placeholder="<%= t('simple_form.labels.inquiry.other_value') %>">
          </div>
          <div class="col-xs-12 form-group">
            <textarea name="inquiry[message]" id="inquiry_message" rows="20" cols="30" class="form-control required" placeholder="<%= t('simple_form.labels.inquiry.special_considerations') %>"></textarea>
          </div>
          <div class="col-xs-12 form-group">
            <input type="hidden" name="submitted" id="submitted" class="button" value="SEND">
            <button id="submit" class="btn btn-primary btn-block" type="submit"><%= t("gko.inquiry_submit") %></button>
          </div>
          <div class="col-xs-12 form-group">
            <p id="error" data-alert="" class="alert"><%= t("gko.inquiry_error") %></p>
            <p id="thanks" data-alert="" class="alert alert-success"><%= t("gko.inquiry_thanks") %></p>
            <p id="timedout" data-alert="" class="alert"><%= t("gko.inquiry_connection_time_out") %></p>
            <p id="state" data-alert="" class="alert"></p>
          </div>
        </div>
      </form>
    </div>
  </div>
</div> 