<%
   image_geometry = local_assigns.has_key?(:image_style) ? image_style : site.preferred_image_carousel_size
   rand_id = "carousel_#{rand(10000)}"
%>
<% if images.length > 1 %>
<div class="carousel slide" id="<%= rand_id %>">
  <div class="carousel-inner">
  <% images.each_with_index do |img, index| %>
    <div class="item <%= 'active' if index == 0 %>">
      <%= image_fu(img, "1400x900#", :rel => "external", :class => 'img-responsive') %>
    </div>
  <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="left carousel-control" href="#<%= rand_id %>" data-slide="prev">
    <span class="icon-angle-left"></span>
  </a>
  <a class="right carousel-control" href="#<%= rand_id %>" data-slide="next">
    <span class="icon-angle-right"></span>
  </a>
  <a class="scroll-down" id="scroll-btn" href="#">
    <span class="icon-arrow-down"></span>
  </a>
</div>
<% else %>
  <%= image_fu(images.first, "1400x900#", :rel => "external", :class => 'img-responsive') %>
<% end %>
